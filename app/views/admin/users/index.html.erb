<h1>管理者画面のユーザー一覧</h1>

<br><button class="btn btn-primary ml-2 " type="submit"><%= link_to t('view.New_User'), new_admin_user_path, class: "link" %></button>

<%= link_to t('view.list_page'), tasks_path %>
<div class="table-responsive-sm">
  <div class="m-2 p-5">
    <table class="table">
      <thead>
        <tr>
          <th>id</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>管理者</th>
          <th><%= t('view.task_count') %></th>
          <th colspan="3"></th>
        </tr>    
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td><%= user.tasks.count %></td>
            <td><button type="button" class="btn btn-outline-primary"><%= link_to t('view.Show'), admin_user_path(user)%></button></td>
            <td><button type="button" class="btn btn-outline-success"><%= link_to t('view.Admin_Edit'), edit_admin_user_path(user)%></button></td>
            <td><button type="button" class="btn btn-outline-danger"><%= link_to t('view.Destroy'), admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }%></button></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="d-flex align-items-center justify-content-center">
<%= paginate @users, theme: 'twitter-bootstrap-4' %>
</div>